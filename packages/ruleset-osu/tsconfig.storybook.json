{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/storybook",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/stories/**/*.ts",
    ".storybook/*.js",
    ".storybook/*.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
