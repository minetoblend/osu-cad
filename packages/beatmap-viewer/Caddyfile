:8081 {
  reverse_proxy /beatmaps/* https://assets.ppy.sh {
    header_up Host {upstream_hostport}
  }
  reverse_proxy /ordr/* https://apis.issou.best {
    header_up Host {upstream_hostport}
  }

  @notProxy {
      not {
          path /beatmaps/*
      }
      file {
          root * /srv
          try_files {path} /index.html
          file_server
      }
  }

  rewrite @notProxy {http.matchers.file.relative}
}
